FROM alpine:3.10
RUN apk -u add ca-certificates util-linux

FROM golang:1.13
ARG version
WORKDIR /app
COPY ./ ./
RUN GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build -ldflags "-s -w -X main.version=$version" -o demo-go

FROM scratch
COPY --from=0 /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/ca-certificates.crt
COPY --from=0 /usr/bin/nsenter /usr/bin/
COPY --from=0 /lib/ld-musl-x86_64.so.1 /lib/
COPY --from=1 /app/demo-go /bin/demo-go
ENTRYPOINT ["/bin/demo-go"]
